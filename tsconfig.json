{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": "./src"
  },
  "include": ["src"]
}
